<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230px"
            android:paddingTop="35px"
            android:orientation="vertical"
            android:background="@color/blueLight">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry Potter Books"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created by Ihza Ananda Rachman"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>


        <!-- COVER -->
        <ImageView
            android:id="@+id/ivDetailCover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!-- JUDUL -->
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:padding="16dp"/>

        <!-- TANGGAL -->
        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!-- DESKRIPSI -->
        <TextView
            android:id="@+id/tvDetailDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:justificationMode="inter_word"
            android:textAlignment="viewStart"/>

        <!-- PAGES -->
        <TextView
            android:id="@+id/tvDetailPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
